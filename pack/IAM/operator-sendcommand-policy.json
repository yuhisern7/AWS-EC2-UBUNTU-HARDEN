{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SendShellOnlyToTaggedInstances",
      "Effect": "Allow",
      "Action": [
        "ssm:SendCommand"
      ],
      "Resource": [
        "arn:aws:ssm:*:*:document/AWS-RunShellScript"
      ],
      "Condition": {
        "StringEquals": {
          "ssm:ResourceTag/Project": "WebsiteHardening"
        }
      }
    },
    {
      "Sid": "ReadCommandResults",
      "Effect": "Allow",
      "Action": [
        "ssm:GetCommandInvocation",
        "ssm:ListCommandInvocations",
        "ssm:ListCommands"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DiscoverEligibleTargets",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ssm:DescribeInstanceInformation",
        "ssm:ListInventoryEntries"
      ],
      "Resource": "*"
    }
  ]
}
